---
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";
import BaseHead from "../../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";

// shelf order = config
const SHELF_ORDER = ["tech", "philosophy", "data", "photography", "misc"];

// load + filter + sort posts
const posts = (await getCollection("blog"))
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// group posts by category
const groupedPosts = Object.fromEntries(
    SHELF_ORDER.map((category) => [
        category,
        posts.filter((post) => post.data.category === category),
    ]),
);
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title={`Blog â€” ${SITE_TITLE}`}
            description={SITE_DESCRIPTION}
        />
    </head>

    <body>
        <main>
            <div class="container">
                <div class="header">
                    <a href="/" class="back-link">
                        <Icon name="mdi:home" size={16} />
                        Home
                    </a>
                    <h1 class="title">Shelf</h1>
                </div>

                {
                    posts.length > 0 ? (
                        SHELF_ORDER.map((category) =>
                            groupedPosts[category].length > 0 ? (
                                <section class="shelf-section">
                                    <h2 class="shelf-title">{category}</h2>

                                    <div class="posts-list">
                                        {groupedPosts[category].map((post) => (
                                            <a
                                                href={`/blog/${post.id}/`}
                                                class="post-item"
                                            >
                                                <div class="post-header">
                                                    <span class="post-date">
                                                        {post.data.pubDate.toLocaleDateString(
                                                            "en-US",
                                                            {
                                                                year: "numeric",
                                                                month: "short",
                                                                day: "numeric",
                                                            },
                                                        )}
                                                    </span>

                                                    <Icon
                                                        name="mdi:arrow-right"
                                                        size={18}
                                                        class="post-arrow"
                                                    />
                                                </div>

                                                <span class="post-desc">
                                                    {post.data.description}
                                                </span>
                                            </a>
                                        ))}
                                    </div>
                                </section>
                            ) : null,
                        )
                    ) : (
                        <div class="empty-state">No posts yet.</div>
                    )
                }
            </div>
        </main>
    </body>
</html>

<style>
    body {
        background: var(--color-bg);
        min-height: 100vh;
    }

    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        min-height: 100vh;
        padding: var(--space-8);
        padding-top: var(--space-10);
    }

    .container {
        max-width: 600px;
        width: 100%;
    }

    .header {
        margin-bottom: var(--space-10);
    }

    .back-link {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        color: var(--color-text-muted);
        text-decoration: none;
        transition: color 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: var(--space-2);
        margin-bottom: var(--space-3);
    }

    .back-link:hover {
        color: var(--color-accent);
    }

    .back-link :global(svg) {
        color: inherit;
    }

    .title {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
        letter-spacing: -0.02em;
    }

    .shelf-section {
        margin-bottom: var(--space-10);
    }

    .shelf-title {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: var(--color-text-muted);
        margin-bottom: var(--space-3);
    }

    .posts-list {
        display: flex;
        flex-direction: column;
        gap: var(--space-1);
    }

    .post-item {
        display: flex;
        flex-direction: column;
        gap: var(--space-1);
        padding: var(--space-2) var(--space-3);
        text-decoration: none;
        color: inherit;
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        transition: all 0.2s ease;
    }

    .post-item:hover {
        border-color: var(--color-accent);
        background: var(--color-surface);
    }

    .post-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--space-3);
    }

    .post-date {
        font-family: var(--font-mono);
        font-size: 0.8rem;
        color: var(--color-text-muted);
        flex-shrink: 0;
    }

    .post-arrow {
        font-size: 1.1rem;
        color: var(--color-accent);
        opacity: 0;
        transition:
            opacity 0.2s ease,
            transform 0.2s ease;
        flex-shrink: 0;
    }

    .post-item:hover .post-arrow {
        opacity: 1;
        transform: translateX(4px);
    }

    .post-desc {
        font-size: 1rem;
        font-weight: bold;
        color: var(--color-text-muted);
        line-height: 1.4;
    }

    .empty-state {
        text-align: center;
        color: var(--color-text-muted);
        padding: var(--space-8) 0;
    }

    @media (max-width: 480px) {
        main {
            padding: var(--space-6);
        }

        .title {
            font-size: 1.5rem;
        }

        .post-item {
            flex-direction: column;
            gap: var(--space-2);
        }
    }
</style>
